<h1><%= @cocktail.name %></h1>
<p><%= link_to "Clik here to add a dosage", new_cocktail_dose_path(@cocktail) %></p>
  <p><%= link_to "Edit", edit_cocktail_path(@cocktail) %></p>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %></li>
  <li><%= dose.ingredient.name %></li>
  <p><%= link_to "Delete", dose_path(dose), method: :delete %></p>
  <% end %>
</ul>

<p><%= link_to "click here to go back to cocktails list", cocktails_path %></p>

